<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Primary brand color for the app -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>

        <!-- Customize the status bar -->
        <item name="android:statusBarColor">@color/statusBarColor</item>

      </style>

    <!-- Another theme, if needed, or it could be an alias for Theme.FinalProject -->
    <style name="AppTheme" parent="Theme.FinalProject">
        <!-- Customize your theme here. This can extend Theme.FinalProject for consistency. -->

        <!-- Example overriding an attribute -->
        <item name="android:textColorSecondary">@color/textSecondaryColor</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/app_icon</item>
        <item name="android:textColor">@color/statusBarColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>
